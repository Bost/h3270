<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app>

  <servlet>
    <servlet-name>servlet</servlet-name>
    <servlet-class>org.h3270.web.Servlet</servlet-class>
    
    <init-param>
		<param-name>path.s3270</param-name>
		<param-value>/usr/local/bin</param-value>
	</init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlet</servlet-name>
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>servlet</welcome-file>
  </welcome-file-list>

</web-app>
